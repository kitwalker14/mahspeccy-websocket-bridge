{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "deno cache server.ts"
  },
  "deploy": {
    "startCommand": "deno run --allow-net --allow-env --allow-read server.ts",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
